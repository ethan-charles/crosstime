
.btns {
	margin-top: 40rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.header {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	top: 0;
	position: fixed;
	width: 100%;
	z-index: 100;
	left:0;
}
.header-title {
	position: absolute;
	left: 50%;
	font-size: 38rpx;
	-webkit-transform: translateX(-50%);
	        transform: translateX(-50%);
}
.header-back {
	position: absolute;
	left:15rpx;
	font-size:30rpx;
	padding: 10rpx;
	/* border-radius: 50%; */
}
.classification {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: stretch;
	-webkit-align-items: stretch;
	        align-items: stretch;
	-webkit-align-content: stretch;
	        align-content: stretch;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.tag {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	width: 15%;
	margin-top: 20px;
}


